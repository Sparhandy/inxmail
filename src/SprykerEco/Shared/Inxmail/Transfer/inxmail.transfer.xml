<?xml version="1.0"?>
<transfers xmlns="http://xsd.spryker.com"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://static.spryker.com http://static.spryker.com/transfer-01.xsd">

    <transfer name="InxmailRequest">
        <property name="eventType" type="string" />
        <property name="event" type="string" />
        <property name="transactionId" type="string" />
        <property name="customerRegistration" type="InxmailCustomerRegistrationPayload" />
        <property name="customerResetPassword" type="InxmailCustomerPasswordResetPayload" />
        <property name="newOrder" type="InxmailNewOrderPayload" />
        <property name="item" type="InxmailShippingConfirmationPayload" />
        <property name="item" type="InxmailCanceledOrderPayload" />
        <property name="item" type="InxmailPaymentIsNotReceivedPayload" />
    </transfer>

    <transfer name="InxmailCustomerRegistrationPayload">
        <property name="Customer" type="InxmailCustomer" />
    </transfer>

    <transfer name="InxmailCustomerPasswordResetPayload">
        <property name="Customer" type="InxmailCustomer" />
    </transfer>

    <transfer name="InxmailNewOrderPayload">
        <property name="Customer" type="InxmailCustomer" />
        <property name="Billing" type="InxmailAddress" />
        <property name="Shipping" type="InxmailAddress" />
        <property name="Order" type="InxmailOrder" />
        <property name="Payment" type="InxmailPayment" />
        <property name="Delivery" type="InxmailDelivery" />
        <property name="OrderItem" type="InxmailOrderItem[]" />
    </transfer>

    <transfer name="InxmailShippingConfirmationPayload">
        <property name="Customer" type="InxmailCustomer" />
        <property name="Billing" type="InxmailAddress" />
        <property name="Shipping" type="InxmailAddress" />
        <property name="Order" type="InxmailOrder" />
        <property name="Payment" type="InxmailPayment" />
        <property name="Delivery" type="InxmailDelivery" />
        <property name="OrderItem" type="InxmailOrderItem[]" />
    </transfer>

    <transfer name="InxmailCanceledOrderPayload">
        <property name="Customer" type="InxmailCustomer" />
        <property name="Billing" type="InxmailAddress" />
        <property name="Shipping" type="InxmailAddress" />
        <property name="Order" type="InxmailOrder" />
        <property name="Payment" type="InxmailPayment" />
        <property name="Delivery" type="InxmailDelivery" />
        <property name="OrderItem" type="InxmailOrderItem[]" />
    </transfer>

    <transfer name="InxmailPaymentIsNotReceivedPayload">
        <property name="Customer" type="InxmailCustomer" />
        <property name="Billing" type="InxmailAddress" />
        <property name="Shipping" type="InxmailAddress" />
        <property name="Order" type="InxmailOrder" />
        <property name="Payment" type="InxmailPayment" />
        <property name="Delivery" type="InxmailDelivery" />
        <property name="OrderItem" type="InxmailOrderItem[]" />
    </transfer>

    <transfer name="InxmailCustomer">
        <property name="Mail" type="string" />
        <property name="ResetLink" type="string" />
        <property name="LoginUrl" type="string" />
        <property name="Salutation" type="string" />
        <property name="Firstname" type="string" />
        <property name="Language" type="string" />
        <property name="Id" type="string" />
        <property name="Lastname" type="string" />
    </transfer>

    <transfer name="InxmailAddress">
        <property name="Salutation" type="string" />
        <property name="Firstname" type="string" />
        <property name="Lastname" type="string" />
        <property name="Company" type="string" />
        <property name="Address1" type="string" />
        <property name="Address2" type="string" />
        <property name="Address3" type="string" />
        <property name="City" type="string" />
        <property name="Zip" type="string" />
        <property name="Country" type="string" />
    </transfer>

    <transfer name="InxmailOrder">
        <property name="Number" type="string" />
        <property name="Comment" type="string" />
        <property name="CancelComment" type="string" />
        <property name="OrderDate" type="string" />
        <property name="SubTotal" type="string" />
        <property name="GiftCard" type="string" />
        <property name="Discount" type="string" />
        <property name="Tax" type="string" />
        <property name="GrandTotal" type="string" />
    </transfer>

    <transfer name="InxmailPayment">
        <property name="CheckDate" type="string" />
        <property name="PaymentMethod" type="string" />
        <property name="PaymentMethodCosts" type="string" />
    </transfer>

    <transfer name="InxmailDelivery">
        <property name="DeliveryMethod" type="string" />
        <property name="DeliveryService" type="string" />
        <property name="DeliveryCosts" type="string" />
        <property name="TrackingId" type="string" />
        <property name="TrackingLink" type="string" />
        <property name="DeliveryService" type="string" />
        <property name="ShippingDate" type="string" />
        <property name="MultiDelivery" type="bool" />
    </transfer>

    <transfer name="InxmailOrderItem">
        <property name="Name" type="string" />
        <property name="Sku" type="string" />
        <property name="Image" type="string" />
        <property name="DeepLink" type="string" />
        <property name="Price" type="string" />
        <property name="Quantity" type="string" />
        <property name="Sum" type="string" />
        <property name="OriginalPrice" type="string" />
        <property name="TaxAmount" type="string" />
        <property name="TaxRate" type="string" />
        <property name="Discount" type="string" />
        <property name="Size" type="string" />
        <property name="Color" type="string" />
    </transfer>

</transfers>
